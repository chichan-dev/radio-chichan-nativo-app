<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:padding="1dp" >

    <LinearLayout
        android:id="@+id/small_filter_container"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/small_filter"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <TextView
        android:id="@+id/filter_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/small_filter_container"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=""
        android:textColor="#9b6b6c"
        android:textSize="15dp"
        android:layout_alignRight="@+id/small_filter_container"
        android:layout_alignEnd="@+id/small_filter_container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true" />

</RelativeLayout>